        border-radius: 5px 5px 0px 0px;
        margin: auto;
        text-shadow: none;
        text-align: left
    }

    #form-2 {
        border-radius: 5px;
        max-width: 700px;
        width: 100%;
        margin: 5% auto;
        background-color: #FFFFFF;
        overflow: hidden;
    }

    p span {
        color: #F00;
    }

    p {
        margin: 0px;
        font-weight: 500;
        line-height: 2;
        color: #333;
    }

    h1 {
        text-align: center;
        color: #666;
        text-shadow: 1px 1px 0px #FFF;
