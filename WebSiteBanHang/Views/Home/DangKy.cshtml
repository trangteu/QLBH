@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc;


@using WebSiteBanHang.Models;
@model ThanhVien
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<link href="~/Content/style_DangKyTK/fonts/icomoon/style.css" rel="stylesheet" />
<link href="~/Content/style_DangKyTK/css/owl.carousel.min.css" rel="stylesheet" />
<link href="~/Content/style_DangKyTK/css/style.css" rel="stylesheet" />




<div class="d-lg-flex half">
    
    <div class="bg order-1 order-md-2" style=" background-image: url('../../Content/style_DangKyTK/images/bg_1.jpg'); "></div>
    <div class="contents order-2 order-md-1">
        <h2 style="color: red;position: relative; top: 25px;left: 180px;font-style:oblique; ">@ViewBag.ThongBao</h2>
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7">
                    <h3 style="font-size: 25px; font-weight: bold; color: blue" class="mb-4">Đăng ký tài khoản</h3>

                    <form action="#" method="post">
                        <div class="form-group first">
                            <label style="font-size: 16px;" for="HoTen">Họ tên</label>
                            <input required type="text" name="HoTen" class="form-control" placeholder="Nhập họ tên ..." id="HoTen">
                        </div>
                        @*<div class="form-group first">
                                <label style="font-size: 16px;" for="SoDienThoai">Số điện thoại</label>
                                <input required type="text" name="SoDienThoai" class="form-control" placeholder="Nhập Số điện thoại ..." id="SoDienThoai">
                            </div>*@
                        <div class="form-group first">
                            <label style="font-size: 16px;" for="TaiKhoan">Tài khoản</label>
                            <input required type="text" name="TaiKhoan" class="form-control" placeholder="Nhập tài khoản ..." id="TaiKhoan">
                        </div>
                        <div class="form-group">
                            <label style="font-size: 16px;" for="Email">Email</label>
                            <input required type="text" name="Email" class="form-control" placeholder="your-email@gmail.com" id="Email">
                        </div>
                        <div class="form-group">
                            <label style="font-size: 16px;" for="MatKhau">Mật khẩu</label>
                            <input required type="password" name="MatKhau" class="form-control" placeholder="Your Password" id="MatKhau">
                        </div>
                        @*<div class="form-group last mb-3">
                                <label style="font-size: 16px;" for="retype-password">Nhập lại mật khẩu</label>
                                <input required type="password" class="form-control" placeholder="Re-Type Your Password" id="retype-password">
                            </div>*@

                        @*<div class="d-flex mb-5 align-items-center">
                                <label class="control control--checkbox mb-0">
                                    <span class="caption">Tạo tài khoản có nghĩa là bạn đồng ý với  <a href="#">Điều khoản và Điều kiện</a> cũng như <a href="#"> Chính sách quyền riêng tư</a> của chúng tôi.</span>
                                    <input type="checkbox" checked="checked" />
                                    <div class="control__indicator"></div>
                                </label>
                            </div>*@



                        @* start captcha   *@
                        <div>
                            @* captcha về tính toán  *@
                            @Html.MathCaptcha()

                            @* captcha về nhập chữ  *@
                            @*@Html.Captcha(5)*@
                        </div>
                        @* end captcha   *@
                        <br />
                        <input type="submit" value="Đăng Ký" class="btn btn-block btn-primary">

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@*<h1 style="color: red; font-weight: bold;">@ViewBag.ThongBao</h1>*@



<script src="js/jquery-3.3.1.min.js"></script>
<script src="js/popper.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/main.js"></script>

