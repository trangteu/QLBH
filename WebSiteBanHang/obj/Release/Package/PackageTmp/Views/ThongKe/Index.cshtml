
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<style>
   @* .list_of_members {
        display: none;
    }*@
</style>

<div class="list_of_members">
    <div class="sales" style="width: 338px;">
        <div class="icon">
            <i class="dollar"></i>
        </div>
        <div class="icon-text">
            @{decimal TongDoanhThu = decimal.Parse(ViewBag.TongDoanhThu.ToString());
                TongDoanhThu = TongDoanhThu / 1;
            }
            <h3>@TongDoanhThu.ToString("#,##") VNĐ</h3>
            <p>Tổng Doanh Thu CT Đơn Hàng</p>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="new-users"  style="width: 230px;">
        <div class="icon">
            <i class="user1"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.TongThanhVien</h3>
            <p>Khách Hàng</p>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="orders"  style="width: 250px;">
        <div class="icon">
            <i class="order"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.TongDDH</h3>
            <p>Đơn Đặt Hàng</p>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="visitors"  style="width: 200px;">
        <div class="icon">
            <i class="visit"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.SoLuongNguoiOnLine</h3>
            <p>Online</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</div>
